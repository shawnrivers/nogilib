{
  "name": "nogilib",
  "private": true,
  "description": "NOGILIB is a web app for showing the information about Nogizaka46 in a user-friendly way.",
  "version": "5.0.0",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next dev -p 8080",
    "serve": "next start -p 9000",
    "type-check": "tsc",
    "type-check:server": "tsc -b tsconfig-server.json",
    "type-check-watch": "tsc --watch",
    "type-check-watch:server": "tsc -b tsconfig-server.json --watch",
    "generate-data": "NODE_PATH=./src ts-node --project tsconfig-server.json src/server/app.ts",
    "generate-responsive-images": "cd ./scripts && npm run generate-responsive-images",
    "lint": "eslint --ignore-path .gitignore . --ext ts,tsx,js,jsx",
    "lint:fix": "eslint --ignore-path .gitignore . --ext ts,tsx,js,jsx --fix",
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook -s ./public/",
    "lighthouse": "lhci autorun"
  },
  "lint-staged": {
    "src/client/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/pages/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/server/**/*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/server/**/raw/editor/**/*.ts": [
      "npm run generate-data"
    ]
  },
  "dependencies": {
    "@emotion/react": "^11.4.0",
    "@fontsource/playfair-display": "^4.5.0",
    "flexsearch": "^0.7.2",
    "focus-visible": "^5.2.0",
    "framer-motion": "^4.1.17",
    "next": "^11.0.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-lazyload": "^3.2.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.2.2",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^13.1.0",
    "@lhci/cli": "^0.8.0",
    "@storybook/addon-actions": "^6.3.6",
    "@storybook/addon-essentials": "^6.3.6",
    "@storybook/addon-knobs": "^6.3.0",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.3.6",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@types/query-string": "^6.3.0",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.2",
    "@types/react-lazyload": "^3.1.1",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "babel-loader": "^8.2.2",
    "babel-preset-react-app": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-next": "^11.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  }
}
