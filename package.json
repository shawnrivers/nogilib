{
  "name": "nogizaka-lib",
  "private": true,
  "description": "A Gatsby powered web application aiming at showing the information about Nogizaka46 in a user-friendly way",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "dev": "gatsby develop",
    "serve": "gatsby serve",
    "type-check": "tsc",
    "type-check:server": "tsc -b tsconfig-server.json",
    "generate-data": "NODE_PATH=./src ts-node --project tsconfig-server.json src/server/app.ts",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --ext jsx",
    "lint:fix": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js --fix",
    "format": "prettier 'src/**/*.{ts,tsx}' --write",
    "stylelint": "stylelint '**/*.scss'",
    "stylelint:fix": "stylelint '**/*.scss' --fix",
    "predeploy": "yarn generate-data && gatsby build --prefix-paths",
    "deploy": "gh-pages -d public -m 'chore: update [skip ci]'"
  },
  "lint-staged": {
    "src/client/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/pages/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/server/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "yarn generate-data"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lint-staged"
      ]
    }
  },
  "dependencies": {
    "framer-motion": "^1.11.1",
    "gatsby": "^2.23.6",
    "gatsby-image": "^2.4.7",
    "gatsby-plugin-layout": "^1.3.4",
    "gatsby-plugin-lunr": "^1.5.2",
    "gatsby-plugin-manifest": "^2.4.12",
    "gatsby-plugin-offline": "^3.2.11",
    "gatsby-plugin-react-helmet": "^3.3.4",
    "gatsby-plugin-resolve-src": "^2.1.0",
    "gatsby-plugin-sass": "^2.3.4",
    "gatsby-plugin-sharp": "^2.6.12",
    "gatsby-plugin-typescript": "^2.4.4",
    "gatsby-source-filesystem": "^2.3.12",
    "gatsby-transformer-json": "^2.4.5",
    "gatsby-transformer-sharp": "^2.5.5",
    "node": "^14.4.0",
    "node-sass": "^4.14.1",
    "query-string": "^6.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.1.0",
    "react-intl": "^4.6.9",
    "react-lazyload": "^2.6.8"
  },
  "devDependencies": {
    "@types/node": "^14.0.13",
    "@types/react": "^16.9.38",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.0.0",
    "@types/react-lazyload": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "gatsby-plugin-root-import": "^2.0.5",
    "gh-pages": "^3.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "prettier-stylelint": "^0.4.2",
    "stylelint": "^13.6.1",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
